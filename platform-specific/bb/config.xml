<widget xmlns="http://www.w3.org/ns/widgets"
        xmlns:rim="http://www.blackberry.com/ns/widgets"
	version="1.0.0.0" id="NewsMixApp">

  <name>NewsMix</name>

  <description>
      Get the Latest News
  </description>
<author href="http://gdglagos.com/" rim:copyright="Copyright 2013 GDGLagos">Google Developers Group, Lagos</author>
  <license href="http://gdglagos.com/">
  </license>


  <feature id="blackberry.ui.dialog"/>

 <feature id="blackberry.app.event" required="true" version="1.0.0"/>
    <feature id="blackberry.invoke" required="true" version="1.0.0"/>
     <feature id="blackberry.app" required="true" version="1.0.0.0"/>
  <feature id="blackberry.identity" required="true" version="1.0.0.0"/>
  <feature id="blackberry.invoke.BrowserArguments" required="true" version="1.0.0.0"/>
   <access subdomains="true" uri="*">
    <feature id="blackberry.app" required="true" version="1.0.0.0"/>
  </access>
  
  <content src="index.html"/>
  <rim:loadingScreen backgroundColor="#47525c" foregroundImage=""/>
  <rim:navigation mode="focus"/>
  <!-- Expose access to all URIs, including the file and http protocols -->
  <access subdomains="true" uri="*" />

  <icon rim:hover="false" src="img/logo.png" />
  <icon rim:hover="true" src="img/logo.png" />

   <content src="index.html" rim:allowInvokeParams="true"/>

  <rim:permissions>
	
    <rim:permit>access_shared</rim:permit>
 
  </rim:permissions>

</widget>

